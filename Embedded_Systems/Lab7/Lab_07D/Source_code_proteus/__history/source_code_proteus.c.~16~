#include<main-proteus.h>
#include<flex_lcd-proteus.h>

#byte PORTB = 0xf81

void init(void){
   lcd_init();
   
   lcd_putc("\f");
   
   lcd_gotoxy(4,1);
   
   lcd_putc("MIKROLAB");
   
   enable_interrupts(GLOBAL);
   
   enable_interrupts(timer0);
   
   SETUP_TIMER_0(TO_INTERVAL | TO_DIV_64);
   
   set_timer0(56161);
   
   int counter = 0;
}

void main(void){
   while(TRUE){}
}


#INT_TIMER0

void int_timer_0(void){
   if(counter == 4){
      lcd_gotoxy(5,2);
      lcd_putc("*****");
   }
   
   if(counter ==8){
      lcd_gotoxy(5,2);
      lcd_putc("     ");
      counter = 0;
   }
   counter++;
}
   
